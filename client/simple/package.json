{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "simple",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:icons && npm run build:vite",
    "build:icons": "node theme_icons.ts",
    "build:vite": "vite build",
    "clean": "rm -Rf node_modules",
    "fix": "npm run fix:stylelint && npm run fix:biome && npm run fix:package",
    "fix:biome": "biome check --write",
    "fix:package": "sort-package-json --quiet",
    "fix:stylelint": "stylelint --fix strict 'src/**/*.{scss,sass,less,styl}'",
    "lint": "npm run lint:biome && npm run lint:tsc",
    "lint:biome": "biome lint",
    "lint:tsc": "tsc --noEmit"
  },
  "browserslist": [
    "Chrome >= 93",
    "Firefox >= 92",
    "Safari >= 15.4",
    "not dead"
  ],
  "devDependencies": {
    "@biomejs/biome": "~2.1.0",
    "@types/node": "^24.0.0",
    "browserslist": "^4.25.1",
    "browserslist-to-esbuild": "^2.1.1",
    "edge.js": "^6.2.1",
    "ionicons": "^8.0.10",
    "less": "^4.3.0",
    "lightningcss": "^1.30.1",
    "normalize.css": "^8.0.1",
    "ol": "^10.6.1",
    "sharp": "^0.34.3",
    "sort-package-json": "^3.4.0",
    "stylelint": "^16.21.1",
    "stylelint-config-standard-less": "^3.0.1",
    "stylelint-prettier": "^5.0.3",
    "svgo": "^4.0.0",
    "swiped-events": "^1.2.0",
    "typescript": "~5.8.3",
    "vite": "npm:rolldown-vite@~7.0.8",
    "vite-plugin-static-copy": "^3.1.0"
  }
}
